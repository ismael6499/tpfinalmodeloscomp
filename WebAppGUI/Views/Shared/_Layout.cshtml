<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Bultos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />

    <style>
        .footer-dark {
            padding: 50px 0;
            color: #f0f9ff;
            background-color: #282d32;
        }

            .footer-dark h3 {
                margin-top: 0;
                margin-bottom: 12px;
                font-weight: bold;
                font-size: 16px;
            }

            .footer-dark ul {
                padding: 0;
                list-style: none;
                line-height: 1.6;
                font-size: 14px;
                margin-bottom: 0;
            }

                .footer-dark ul a {
                    color: inherit;
                    text-decoration: none;
                    opacity: 0.6;
                }

                    .footer-dark ul a:hover {
                        opacity: 0.8;
                    }

            .footer-dark .item.text {
                margin-bottom: 36px;
            }

                .footer-dark .item.text p {
                    opacity: 0.6;
                    margin-bottom: 0;
                }

            .footer-dark .item.social {
                text-align: center;
            }

                .footer-dark .item.social > a {
                    font-size: 20px;
                    width: 36px;
                    height: 36px;
                    line-height: 36px;
                    display: inline-block;
                    text-align: center;
                    border-radius: 50%;
                    box-shadow: 0 0 0 1px rgba(255,255,255,0.4);
                    margin: 0 8px;
                    color: #fff;
                    opacity: 0.75;
                }

                    .footer-dark .item.social > a:hover {
                        opacity: 0.9;
                    }

            .footer-dark .copyright {
                text-align: center;
                padding-top: 24px;
                opacity: 0.3;
                font-size: 13px;
                margin-bottom: 0;
            }
    </style>
</head>


<body>

    <div class="navbar navbar-fixed-top bg-dark">
        <div class="container" style="display:flex; justify-content: center;">
            <div class="navbar-header">
                @Html.ActionLink("Sistema de Bultos", "Index", "Home", new { area = "" }, new { @class = "navbar-brand mb-0 h1 text-white" })
            </div>
        </div>
    </div>
    <div style="height: 100%; background-image: linear-gradient(120deg, #fdfbfb 0%, #ebedee 100%);">
        <main role="main" style="height: 100%">
            @if (ViewBag.isHome != true)
            {
                @:<div class="container" style="padding-top: 10px">
                }
            @RenderBody()
            @if (ViewBag.isHome != true)
            {
            @:</div>
        }
        </main>
    </div>

    <div class="footer-dark">
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-md-3 item">
                        <h3>Integrantes</h3>
                        <ul class="text-muted">
                            <li>Acosta Agustin</li>
                            <li>Cabrera Pablo Emanuel</li>
                            <li>Cornec Guillermo</li>
                            <li>Celada Martina</li>
                            <li>Gonzalez Diego</li>
                            <li>Morales Juan</li>
                        </ul>
                    </div>
                    <div class="col-sm-6 col-md-3 item">
                        <h3>Materia</h3>
                        <ul class="text-muted">
                            <li>Modelos Computacionales de Gestión Administrativa</li>
                            <li>Trabajo Práctico de Arquitectura</li>
                        </ul>
                    </div>
                    <div class="col-md-6 item text">
                        <h3>Proyecto</h3>
                        <p>
                            Proyecto final de Modelos Computacionales de Gestión Administrativa
                        </p>
                    </div>
                    <div class="col item social">
                        <a href="https://github.com/ismael6499/tpfinalmodeloscomp/tree/master" target="_blank"><i class="fas fa-code"></i></a>
                        <a href="#"><i class="fas fa-thumbs-up"></i></a>
                    </div>
                </div>
                <p class="copyright">Universidad Abierta Interamericana | Facultad de Ingeniería Informática | @DateTime.Now.Year</p>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>