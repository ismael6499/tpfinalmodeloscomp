@model IEnumerable<WebAppGUI.Modelos.Cinta>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Cintas</h1>

<p>
    <a asp-action="Create">Crear Cinta</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Encendido)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Encendido)
            </td>

            <td>
                @Html.ActionLink("Editar", "Edit", new { item.Id }) |
                @Html.ActionLink("Detalle", "Details", new { item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { item.Id })
                @Html.ActionLink("Encender", "Encender", new { url = item.Url })
                @Html.ActionLink("Apagar", "Apagar", new { url = item.Url })
            </td>
        </tr>
    }
    </tbody>
</table>